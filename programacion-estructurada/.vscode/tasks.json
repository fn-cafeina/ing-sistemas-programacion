{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compilar-y-ejecutar",
      "type": "shell",
      "command": "clear && gcc -fdiagnostics-color=always -Wall -Wextra -pedantic -std=c11 -Wshadow -Wconversion -Wunused -g '${file}' -o '${fileDirname}/${fileBasenameNoExtension}' -lm && '${fileDirname}/${fileBasenameNoExtension}' && echo && rm '${fileDirname}/${fileBasenameNoExtension}'",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "focus": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}