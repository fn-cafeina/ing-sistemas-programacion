  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.tabSize": 8
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.tabSize": 8
  },
  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 8
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
